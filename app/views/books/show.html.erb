<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/user', user:@user %>
        <%= render 'books/book', book:@book %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user) do %>
                 <%= attachment_image_tag @books.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
                <% end %></br>
                <%= link_to @user.name,user_path(@user.id) %>
              </td>
              <td>
                <%= link_to @books.title,book_path(@books.id) %>
              </td>
              <td>
                <%= @books.body %>
              </td>
              <% if @books.user.id == current_user.id %>
              <td>
                <%= link_to edit_book_path(@books) do %>
                  <button type="button" class="btn btn-success">Edit</button>
                <% end %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@books.id), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
              </td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>